<head>
    <title>Link Budget Calculator(Alpha)</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            width: 100%;
            max-width: 400px; /* Set the maximum width for the form on larger screens */
        }

        input[type="number"] {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            outline: none;
        }

        

        input[type="submit"]:hover {
            background-color: #0056b3;
        }

        @media screen and (max-width: 480px) {
            /* Adjust styles for smaller screens */
            .container {
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container" id="ctner">
        <!-- Form -->
        <form id="transmissionForm">
            <h1>Link Budget Calculator(Alpha)</h1>

            <label for="transmitPower">Transmit Power:</label>
            <input type="number" id="transmitPower" placeholder="Enter Transmit Power..." step="any">

            <label for="antennaTxGain">Antenna Tx Gain:</label>
            <input type="number" id="antennaTxGain" placeholder="Enter Antenna Tx Gain..." step="any">

            <label for="antennaRxGain">Antenna Rx Gain:</label>
            <input type="number" id="antennaRxGain" placeholder="Enter Antenna Rx Gain..." step="any">

            <label for="fsl">Free Space Loss (FSL):</label>
            <input type="number" id="fsl" placeholder="Enter Free Space Loss..." step="any">

            <label for="txLoss">Transmission Loss (Tx Loss):</label>
            <input type="number" id="txLoss" placeholder="Enter Transmission Loss..." step="any">

            <label for="rxLoss">Receiver Loss (Rx Loss):</label>
            <input type="number" id="rxLoss" placeholder="Enter Receiver Loss..." step="any">

            <label for="otherLoss">Other Loss:</label>
            <input type="number" id="otherLoss" placeholder="Enter Other Loss..." step="any">

            <input type="submit" value="Submit">
        </form>
        <!-- End Form -->

        <!-- Display calculated RSL -->
        <div id="calculatedRSL"></div>
    </div>

    <script>
        // Function to calculate RSL when form is submitted
        document.getElementById('transmissionForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent form submission

            // Get input values
            var transmitPower = parseFloat(document.getElementById('transmitPower').value) || 0;
            var antennaTxGain = parseFloat(document.getElementById('antennaTxGain').value) || 0;
            var antennaRxGain = parseFloat(document.getElementById('antennaRxGain').value) || 0;
            var fsl = parseFloat(document.getElementById('fsl').value) || 0;
            var txLoss = parseFloat(document.getElementById('txLoss').value) || 0;
            var rxLoss = parseFloat(document.getElementById('rxLoss').value) || 0;
            var otherLoss = parseFloat(document.getElementById('otherLoss').value) || 0;

            // Calculate RSL
            var rsl = transmitPower + antennaTxGain + antennaRxGain - fsl - txLoss - rxLoss - otherLoss;

            // Display the calculated RSL value
            alert('Calculated RSL: ' + rsl.toFixed(2));
        });
    </script>
</body>
